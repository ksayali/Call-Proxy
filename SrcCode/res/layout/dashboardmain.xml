<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ack"
    android:orientation="vertical" 
    android:layoutAnimation="@anim/layout_random_fade">

    <Button
        android:id="@+id/Button02"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="Backup"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        
        android:textStyle="bold" />

    
    <Button
        android:id="@+id/h"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="79dp"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="Privacy Eraser"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="Private Space"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/homeButton"
        android:layout_marginTop="23dp"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="WhiteList/BlackList"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/Button02"
        android:layout_alignLeft="@+id/Button04"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="Block Settings"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/Button04"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="Time Based Profiles"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/homeButton"
        android:layout_alignTop="@+id/Button01"
        android:layout_marginTop="19dp"
        android:src="@drawable/timepro" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Button02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/backup" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/Button05"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_marginBottom="23dp"
        android:src="@drawable/privacy" />

    <Button
        android:id="@+id/bs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignTop="@+id/homeButton"
        android:layout_marginLeft="30dp"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="View Blocked Calls/SMS"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bs"
        android:layout_toRightOf="@+id/Button02"
        android:src="@drawable/bm" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView2"
        android:src="@drawable/wblist" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/h"
        android:src="@drawable/settingslist" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/Button01"
        android:layout_alignTop="@+id/homeButton"
        android:src="@drawable/ps" />

</RelativeLayout>