<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/layout_animation_table"
    android:background="@drawable/bbb" >

    <Button
        android:id="@+id/vbm"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="122dp"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="View Blocked SMS"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/vbc"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignBaseline="@+id/vbm"
        android:layout_alignBottom="@+id/vbm"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:background="@layout/buttonshape"
        android:gravity="center|bottom"
        android:text="View Blocked Calls"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/vbc"
        android:layout_alignTop="@+id/vbc"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/blockc" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/vbm"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="24dp"
        android:src="@drawable/blocksms" />

</RelativeLayout>